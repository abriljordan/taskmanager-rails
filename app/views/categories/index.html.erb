<%= link_to('Back to Homepage', {controller: 'main', action: 'index'}, class: 'text-blue-500') %><br />

<div class="categories index">
  <h2 class="text-xl font-bold mb-4">Categories</h2>

  <div class="actions mb-4">
    <%= link_to 'New Category', new_category_path, class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
  </div>

  <table class="min-w-full border-collapse border border-gray-200" summary="Categories list view">
    <thead class="bg-gray-100">
      <tr>
        <th class="text-left p-2 border border-gray-300">Name</th>
        <th class="text-left p-2 border border-gray-300">Description</th>
        <th class="text-left p-2 border border-gray-300">Position</th>
        <th class="text-left p-2 border border-gray-300">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr class="border-b">
          <td class="p-2 border border-gray-300"><%= category.name %></td>
          <td class="p-2 border border-gray-300"><%= category.description %></td>
          <td class="p-2 border border-gray-300"><%= category.position %></td>
          <td class="p-2 border border-gray-300">
            <%= link_to 'Show', category_path(category), class: 'text-blue-500 hover:underline' %>
            <%= link_to 'Edit', edit_category_path(category), class: 'text-blue-500 hover:underline' %>
            <%= link_to 'Delete', delete_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:underline' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>