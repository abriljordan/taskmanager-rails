<%= link_to("Back to List", categories_path, class: 'back-link') %>

<div class="categories delete">
  <h2 class="text-xl font-bold mb-4">Delete Category</h2>

  <%= form_for(@category, method: :delete) do |f| %>
    <p>Are you sure you want to permanently delete this category?</p>
    <p class="font-semibold"><%= @category.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Category", class: 'bg-red-500 text-white py-2 px-4 rounded') %>
    </div>
  <% end %>
</div>