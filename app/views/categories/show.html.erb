<%= link_to("Back to Categories", categories_path, class: 'back-link') %>

<div class="categories show">
  <h2 class="text-xl font-bold mb-4">Show Category</h2>

  <div class="actions mb-4">
    <%= link_to 'Edit', edit_category_path(@category), class: 'text-blue-500 hover:underline' %>
    <%= link_to 'Delete', delete_category_path(@category), method: :delete, data: { confirm: 'Are you sure you want to permanently delete this category?' }, class: 'text-red-500 hover:underline' %>
  </div>

  <table class="min-w-full border-collapse border border-gray-200" summary="Category detail view">
    <tbody>
      <tr class="border-b">
        <th class="text-left p-2">Name</th>
        <td class="p-2"><%= @category.name %></td>
      </tr>
      <tr class="border-b">
        <th class="text-left p-2">Description</th>
        <td class="p-2"><%= @category.description %></td>
      </tr>
      <tr class="border-b">
        <th class="text-left p-2">Position</th>
        <td class="p-2"><%= @category.position %></td>
      </tr>
      <tr class="border-b">
        <th class="text-left p-2">Created</th>
        <td class="p-2"><%= @category.created_at.strftime("%B %d, %Y") %></td>
      </tr>
      <tr class="border-b">
        <th class="text-left p-2">Updated</th>
        <td class="p-2"><%= @category.updated_at.strftime("%B %d, %Y") %></td>
      </tr>
    </tbody>
  </table>
</div>