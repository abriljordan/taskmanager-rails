<%# app/views/devise/registrations/edit.html.erb %>
<div class="flex items-center justify-center h-screen bg-gray-100">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-center text-gray-700">Edit Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="mt-6">
        <%= f.label :email, class: "block text-sm font-medium text-gray-600" %>
        <%= f.email_field :email, class: "block w-full mt-1 p-2 border rounded-md focus:border-blue-500 focus:ring focus:ring-blue-200", autocomplete: "email" %>
      </div>

      <div class="mt-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-600" %>
        <%= f.password_field :password, class: "block w-full mt-1 p-2 border rounded-md focus:border-blue-500 focus:ring focus:ring-blue-200", autocomplete: "new-password" %>
        <p class="mt-1 text-xs text-gray-500">Leave blank if you don't want to change it.</p>
      </div>

      <div class="mt-4">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-600" %>
        <%= f.password_field :password_confirmation, class: "block w-full mt-1 p-2 border rounded-md focus:border-blue-500 focus:ring focus:ring-blue-200", autocomplete: "new-password" %>
      </div>

      <div class="flex items-center justify-between mt-4">
        <%= f.submit "Update", class: "w-full py-2 mt-4 font-semibold text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300" %>
      </div>

      <div class="mt-4 text-center">
        <%= link_to "Cancel", main_index_path, class: "text-blue-500 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>