<h1 class="text-2xl font-bold">Tasks for Tag: <%= @tag.name %></h1>

<div class="tasks mb-8">
  <% if @tasks.any? %>
    <table class="min-w-full border-collapse border border-gray-200">
      <thead>
        <tr class="bg-gray-200">
          <th class="text-left p-2">Task</th>
          <th class="text-left p-2">Completed</th>
          <th class="text-left p-2">Assigned Users</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr class="border-b">
            <td class="p-2"><%= link_to task.name, task_path(task), class: "text-blue-500" %></td>
            <td class="p-2"><%= completed_status(task.completed?) %></td>
            <td class="p-2">
              <% if task.assigned_users.any? %>
                <%= task.assigned_users.map(&:email).join(", ") %>
              <% else %>
                No users assigned.
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No tasks assigned to this tag.</p>
  <% end %>
</div>